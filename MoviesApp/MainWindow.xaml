<Window x:Class="MoviesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="GenresTemplate">
                <ListView ItemsSource="{ Binding Genres }">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{ Binding Path=Name, Mode=OneWay }" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DataTemplate>
        </Grid.Resources>
        <DataGrid x:Name="moviesGrid" Margin="10,10,10,217" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{ Binding Id }"/>
                <DataGridTextColumn Header="Name" Binding="{ Binding Name }"/>
                <DataGridTextColumn Header="Director" Binding="{ Binding Director }"/>
                <DataGridTemplateColumn Header="Genres" CellTemplate="{ StaticResource GenresTemplate }" />
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="genresGrid" Margin="405,222,10,10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{ Binding Id }"/>
                <DataGridTextColumn Header="Genre" Binding="{ Binding Name }"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="directorsGrid" Margin="10,222,400,10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{ Binding Id }"/>
                <DataGridTextColumn Header="First name" Binding="{ Binding FirstName }"/>
                <DataGridTextColumn Header="Last name" Binding="{ Binding LastName }"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
